<?xml version="1.0"?>
<robot name="DiffRobot" xmlns:xacro="http://ros.org/wiki/xacro">
 <xacro:include filename="$(find my_gazebo)/urdf/link_macro.xacro" />
<!-- すべてのLink -->
 <link name="base_footprint" />
 <link name="base_link" />
 
 <!-- BODY LINK -->
 <xacro:box_link name="body_link" x="0.2" y="0.15" z="0.05" mass="1.0" color="Red" />
 
 <!-- WHEEL RIGHT LINK -->
 <xacro:cylinder_link name="wheel_right_link" radius="0.025" length="0.03" mass="1.0" color="Red" />
 <!-- WHEEL LEFT LINK -->
 <xacro:cylinder_link name="wheel_left_link" radius="0.025" length="0.03" mass="1.0" color="Red" />
 <!-- CASTER FRONT LINK -->
 <xacro:sphere_link name="caster_front_link" radius="0.025" mass="1.0" color="Red" />

<!-- すべてのJoint -->
 <joint name="base_joint" type="fixed">
  <parent link="base_footprint"/>
  <child link="base_link"/>
  <origin xyz="0 0 0" rpy="0 0 0" />
 </joint>
 
 <joint name="body_joint" type="fixed">
  <parent link="base_link" />
  <child link="body_link" />
  <origin xyz="0 0 0" rpy="0 0 0" />
 </joint>
 
 <joint name="wheel_right_joint" type="continuous">
  <parent link="base_link" />
  <child link="wheel_right_link" />
  <origin xyz="-0.075 -0.09 -0.025" rpy="-1.57 0 0" />
  <axis xyz="0 0 1" />
 </joint>
 
 <joint name="wheel_left_joint" type="continuous">
  <parent link="base_link" />
  <child link="wheel_left_link" />
  <origin xyz="-0.075 0.09 -0.025" rpy="-1.57 0 0" />
  <axis xyz="0 0 1" />
 </joint>
 
 <joint name="caster_front_joint" type="fixed">
  <parent link="base_link" />
  <child link="caster_front_link" />
  <origin xyz="0.075 0 -0.025" rpy="0 0 0" />
 </joint>
</robot>
