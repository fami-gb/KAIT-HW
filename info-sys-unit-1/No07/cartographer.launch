<?xml version="1.0"?>
<launch>
    <node pkg="cartographer_ros" exec="cartographer_node"
            args="-configuration_directory $(find-pkg-share my_gazebo)/config
                  -configuration_basename diff_robot_2d.lua"
            output="screen">
        <param name="use_sim_time" value="true" />
    </node>

    <node pkg="cartographer_ros" exec="cartographer_occupancy_grid_node"
        args="-resolution 0.05
              -publish_period_sec 1.0"
        output="screen">
        <param name="use_sim_time" value="true" />
    </node>

    <node pkg="rviz2" exec="rviz2"
        args="-d $(find-pkg-share turtlebot3_cartographer)/rviz/tb3_cartographer.rviz">
        <param name="use_sim_time" value="true" />
    </node>
</launch>
